.post
  // title
  h2
    a(href=base + '/post/' + post.id + '/') #{post.title}
    a.edit(href=base + '/post/' + post.id + '/edit') Edit
  
  // flash messages
  != messages()
  
  // dates
  p.date.created Created at #{post.date}
  - if (post.updatedAt)
    p.date.updated Updated at #{post.updatedAt}
  
  // body
  pre.body= post.body